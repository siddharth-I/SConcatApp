@model ConcatModel

<div class="container">
    <h3 class="display-4">Enter Word and Repetitions</h3>
    <form method="post" asp-action="Results" asp-controller="Home">
        <div class="form-group">
            <label asp-for="Word"></label>
            <input asp-for="Word" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Repetitions"></label>
            <input asp-for="Repetitions" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
